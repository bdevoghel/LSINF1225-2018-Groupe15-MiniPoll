<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="p.poll.activity.FriendListActivity">

    <Button
        android:id="@+id/notification"
        android:layout_width="130dp"
        android:layout_height="66dp"
        android:layout_alignParentTop="true"
        android:layout_weight="50"
        android:text="@string/notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/searchB1" />

    <SearchView
        android:id="@+id/searchB1"
        android:layout_width="233dp"
        android:layout_height="65dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/notification"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </SearchView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="445dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchB1">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="100">


            <ImageView
                android:id="@+id/userImageProfile"
                android:layout_width="195dp"
                android:layout_height="220dp"
                android:layout_marginBottom="140dp"
                android:layout_marginLeft="36dp"
                android:layout_marginStart="36dp"
                android:layout_weight="50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/michel" />

            <ImageView
                android:id="@+id/userImageProfile2"
                android:layout_width="195dp"
                android:layout_height="220dp"
                android:layout_marginBottom="140dp"
                android:layout_marginLeft="264dp"
                android:layout_marginStart="264dp"
                android:layout_weight="50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/michel" />

            <TextView
                android:id="@+id/fname"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:text="First Name"
                app:layout_constraintBottom_toTopOf="@+id/userImageProfile"
                app:layout_constraintEnd_toStartOf="@+id/lname"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/userImageProfile" />

            <TextView
                android:id="@+id/lname"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:text="Last Name"
                app:layout_constraintBottom_toTopOf="@+id/userImageProfile"
                app:layout_constraintEnd_toEndOf="@+id/userImageProfile" />

            <TextView
                android:id="@+id/fname2"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:text="Last Name"
                app:layout_constraintBottom_toTopOf="@+id/userImageProfile2"
                app:layout_constraintEnd_toEndOf="@+id/userImageProfile2" />

            <TextView
                android:id="@+id/lname2"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:text="Last Name"
                app:layout_constraintBottom_toTopOf="@+id/userImageProfile2"
                app:layout_constraintEnd_toEndOf="@+id/userImageProfile2" />

        </android.support.constraint.ConstraintLayout>
    </HorizontalScrollView>

</android.support.constraint.ConstraintLayout>
