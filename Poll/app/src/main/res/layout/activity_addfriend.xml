<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="p.poll.activity.MainActivity">


    <SearchView
        android:id="@+id/searchB1"
        android:layout_width="match_parent"
        android:layout_height="65dp">

    </SearchView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/userImageProfile"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="176dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/michel" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="149dp"
                android:layout_height="46dp"
                android:layout_marginTop="61dp"
                android:text="Michel"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintBottom_toTopOf="@+id/userImageProfile"
                app:layout_constraintLeft_toLeftOf="@id/userImageProfile"
                app:layout_constraintRight_toRightOf="@id/userImageProfile"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonAddFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="Add"
                app:layout_constraintLeft_toLeftOf="@id/userImageProfile"
                app:layout_constraintRight_toRightOf="@id/userImageProfile"
                app:layout_constraintTop_toBottomOf="@id/userImageProfile" />

        </android.support.constraint.ConstraintLayout>
    </HorizontalScrollView>

</android.support.constraint.ConstraintLayout>
